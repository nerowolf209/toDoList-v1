
<%- include("header") -%>    

    <div class="box" id="heading">
        <h1><%= listTitle %></h1>
    </div>
    
    <div class="box">
        <% if (list.length >= 1) { %>
            <% for(var i=0; i<list.length; i++) {%>
                <div class="item">
                    <input type="checkbox"><p><%= list[i]%></p>
                </div>
            <% } %>
        <% } %>

        <form class="item" action="" method="post">
            <input autocomplete="off" type="text" name="toDoList" id="" placeholder="New Item">
            <button type="submit" name="list" value= <%= listTitle %>>+</button>
        </form>
    </div>

<%- include("footer") -%>    